\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{dominatrix}

% Logic Units
\RequirePackage[l2tabu,orthodox]{nag} % Checks for incorrect or obsolete LaTeX packages
\RequirePackage{ifxetex}  % Checks if XeTeX/XeLaTeX is the compiler-of-choice

% Universal Fixes
\ifxetex
  \RequirePackage{xltxtra}
\fi
  \RequirePackage{fixltx2e}
  \RequirePackage{fix-cm}
\endinput

% Math
\RequirePackage{amsmath}  % Swiss-knife math package

% Graphics
\RequirePackage{tikz} % Engine that produces vector graphics from geometric/algebraic descriptions
\RequirePackage{graphicx} % Allows inserting of graphics and images
\RequirePackage{epstopdf} % Converts .eps files to .pdf for easy manipulation
\RequirePackage{pgfgantt} % Leverages TikZ for drawing Gantt Charts

% Layout and Format
\RequirePackage{parallel} % Aligns paragraphs across columns
\RequirePackage{lineno} % Appends line-numbers in the margin if \linenumbers is declared
\RequirePackage[final]{showkeys} % Shows label references where they are defined.
\RequirePackage{csquotes} % Fixes inline and display quotations
\RequirePackage{paralist} % Allows inline enumeration in a paragraph and compact enums/lists
\RequirePackage{pdflscape} % Allows for the occasional landscape page with correct orientation in PDFs

% Tables and Figures
\RequirePackage{booktabs} % For drawing nice tables with proper line weights
\RequirePackage{float} % Floats tables and figures
\RequirePackage{flafter} % To ensure that figures float only after they are defined/referenced
\RequirePackage{subcaption} % Figure-ception - Allows figures within figures
\RequirePackage{array}  % Extends options for column formats, alignments and layouts
\RequirePackage{tabu} % Provides better control for tables and column widths
\RequirePackage{longtable} % Allows tables to span across pages - integrates with tabu
\RequirePackage{multicol} % Allows spanning columns in tables
\RequirePackage{caption} % Allows greater customization of captions and captions outside floats

% Referencing
\RequirePackage[longnamesfirst]{natbib} % Reimplements \cite to work with author-year and numerical citations
\RequirePackage{cleveref} % Adds semantic naming when referencing figures
\RequirePackage{varioref} % Introduces referencing by page instead of figure number
\RequirePackage{datenumber} % Provides commands to convert a date into a number

% Fonts and Typography
\RequirePackage{eulervm} % Enables math-font support for the concrete package we call below
\RequirePackage[stretch=10,shrink=10]{microtype} % Tweaks smallish fonts and kernings
\RequirePackage{textcomp} % Supports the Text Companion font, which provides additional text symbols
\RequirePackage{siunitx} % Provides support for typesetting SI units
\RequirePackage[ocgcolorlinks,hypertexnames=false,plainpages=false]{hyperref} % Converts \url references to valid hyperlinks in PDF documents
\RequirePackage{ellipsis} % Fixes space uneveness around ellipses
\RequirePackage{url} % Allows encapsulated URLs to break across lines
\RequirePackage[super]{nth} % Automatically superscripts counters
\RequirePackage{lmodern}

% Code
\RequirePackage{listings} % Package for formatting code
\RequirePackage{algorithms}

